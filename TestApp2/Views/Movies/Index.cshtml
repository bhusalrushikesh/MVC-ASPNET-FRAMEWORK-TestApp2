@model IEnumerable<TestApp2.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<div class="d-flex justify-content-end">
    @Html.ActionLink("Add Movie", "New", "Movies", new { @class = "btn btn-outline-dark" })
</div>
<br/>
@if (!Model.Any())
{
    <h4>We Don't have Movies yet</h4>
}
else
{
    <table class="table table-bordered rounded table-hover">
        <thead class="table-primary">
        <tr>
            <th>Movie</th>
            <th>Genre Type</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody class="table-secondary">
        @foreach (var movies in Model)
        {
            <tr >
                <td>@Html.ActionLink(movies.Name, "Detail", "Movies", new { id = movies.Id }, null)</td>
                <td>@movies.GenreType.Name</td>
                <td>@Html.ActionLink("Edit", "Edit", "Movies", new { id = movies.Id }, new {@class= "btn btn-outline-dark" })</td>
                <td>@Html.ActionLink("Delete", "Delete", "Movies", new { id = movies.Id }, new {@class= "btn btn-outline-dark" })</td>

            </tr>
        }
        </tbody>
    </table>
}


